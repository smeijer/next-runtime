{
  "name": "next-runtime",
  "description": "handler to improve data handling in Next.js getServerSideProps",
  "author": "Stephan Meijer <stephan@meijer.ws>",
  "version": "1.2.0",
  "private": false,
  "repository": "https://github.com/smeijer/next-runtime",
  "scripts": {
    "build": "rimraf ./lib *.tsbuildinfo && tsc --project ./tsconfig.build.json",
    "lint": "eslint",
    "test": "npm run test:unit && npm run test:e2e",
    "test:run-next": "npx next dev -p 4000",
    "test:unit": "cross-env type=unit jest --runInBand ./src",
    "test:e2e": "cross-env type=e2e jest --runInBand ./pages",
    "version": "npm run build",
    "postversion": "cp -r docs README.md package.json lib",
    "release": "np --contents=./lib --message='release: cut the `%s` release' --no-yarn --no-2fa"
  },
  "main": "./index.js",
  "source": "./src/index.ts",
  "license": "MIT",
  "__exports": {
    ".": "./lib/index.js",
    "./form": "./lib/form.js",
    "./handle": "./lib/handlcookies.e.js",
    "./responses": "./lib/responses.js",
    "./utils": "./lib/utils/index.js"
  },
  "dependencies": {
    "accepts": "^1.3.7",
    "attr-accept": "^2.2.2",
    "body-parser": "^1.19.0",
    "busboy": "^0.2.14",
    "bytes": "^3.1.0",
    "cookies": "^0.8.0",
    "debug": "^2.6.9",
    "picoid": "^1.1.3",
    "node-fetch": "^2.6.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/busboy": "^0.2.4",
    "@types/cookies": "^0.7.7",
    "@types/jest": "^27.0.1",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^17.0.20",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "babel-plugin-istanbul": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "expect-playwright": "^0.8.0",
    "fetch-cookie": "^1.0.0",
    "form-data": "^3.0.1",
    "husky": "^4.3.8",
    "jest": "^27.2.0",
    "jest-cli": "^27.2.0",
    "jest-partial": "^1.0.1",
    "jest-playwright-preset": "^1.7.0",
    "lint-staged": "^11.1.2",
    "next": "11.1.2",
    "np": "^7.5.0",
    "playwright": "^1.14.1",
    "prettier": "^2.4.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "^3.0.2",
    "test-listen": "^1.1.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "next": ">=11.1.2",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
